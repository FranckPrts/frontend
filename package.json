    "babel-plugin-styled-components": "^1.10.1",
    "date-fns": "^2.0.0-alpha.7",
    "downshift": "^2.2.3",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "file-saver": "^2.0.2",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.3",
    "hash.js": "^1.1.7",
    "lab.js": "^20.0.1",
    "lodash": "^4.17.15",
    "lodash.clonedeep": "^4.5.0",
    "lodash.debounce": "^4.0.8",
    "moment": "^2.24.0",
    "next": "^9.2.1",
